@using AvenueClothing.Models
@model MiniBasketViewModel
@{
    Layout = "";
}

@if (Model.IsEmpty)
    {
        <a href="/store" class="minicart is-empty text-right" id="empty-cart">
            <span class="icon icon-bag mr-1" aria-hidden="true" focusable="false" role="img">
                @Html.Raw(System.IO.File.ReadAllText(Server.MapPath("~/img/icons/bag.svg")))
            </span>
            Your Bag is Empty
        </a>
    }

  else
    {
        <a href="/basket" class-"minicart has-items" id="mini-cart">
            @*<i class="icon-shopping-cart icon-white"></i>*@
            <span class="icon icon-bag mr-1" aria-hidden="true" focusable="false" role="img">
                @Html.Raw(System.IO.File.ReadAllText(Server.MapPath("~/img/icons/bag.svg")))
            </span>
            <span class="item-qty">@Model.NumberOfItems</span> items in cart, total: <span class="order-total">@Model.Total</span>
        </a>
    }




